# ðŸš€ TucanBIT Email Verification System Configuration
# Copy this file to .env and update with your actual values

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@tucanbit.com
SMTP_FROM_NAME=TucanBIT
SMTP_USE_TLS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_RESEND_COOLDOWN_MINUTES=2
OTP_CODE_LENGTH=6

# Email Templates
EMAIL_TEMPLATES_DIR=templates/emails
EMAIL_BRAND_NAME=TucanBIT
EMAIL_SUPPORT_EMAIL=support@tucanbit.com
EMAIL_LOGIN_URL=https://app.tucanbit.com/login
EMAIL_RESET_URL=https://app.tucanbit.com/reset-password

# Application URLs
APP_BASE_URL=http://localhost:8080
APP_FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_HOURS=168

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/email_verification.log

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_BURST_SIZE=20

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tucanbit
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_SSL_MODE=disable

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30s 